<h1>All the users</h1>
<p>
  <%= link_to "Create a new user", signup_path %>
</p>
<table>
  <tr>
    <th>id</th>
    <th>Username</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.email if user %></td>
      <td><%= link_to "Update", edit_user_path(user) %></td>
      <td><%= link_to "Show", user_path(user) %></td>
      <td><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to "Home Page", root_path%>
